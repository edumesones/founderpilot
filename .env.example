# FounderPilot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME=FounderPilot
DEBUG=false
API_V1_PREFIX=/api/v1

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/founderpilot

# =============================================================================
# JWT Authentication (FEAT-001)
# =============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Google OAuth (FEAT-001)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# =============================================================================
# Stripe Configuration (FEAT-002)
# =============================================================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Get this from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs - Create products/prices in Stripe Dashboard
# https://dashboard.stripe.com/products
STRIPE_PRICE_INBOX=price_inboxpilot_monthly
STRIPE_PRICE_INVOICE=price_invoicepilot_monthly
STRIPE_PRICE_MEETING=price_meetingpilot_monthly
STRIPE_PRICE_BUNDLE=price_bundle_monthly

# Trial configuration
TRIAL_DAYS=14

# =============================================================================
# Frontend URLs
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Slack Integration (FEAT-006)
# =============================================================================
SLACK_BOT_TOKEN=xoxb-xxx
SLACK_SIGNING_SECRET=xxx
SLACK_APP_ID=xxx

# =============================================================================
# LLM Configuration (Agents)
# =============================================================================
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx

# =============================================================================
# Observability (Optional)
# =============================================================================
LANGFUSE_PUBLIC_KEY=pk-xxx
LANGFUSE_SECRET_KEY=sk-xxx
LANGFUSE_HOST=https://cloud.langfuse.com

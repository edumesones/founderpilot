# FounderPilot Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=FounderPilot
DEBUG=false
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/founderpilot

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Auth
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Slack Integration
# Create a Slack App at https://api.slack.com/apps
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret

# For development without OAuth (optional)
# SLACK_BOT_TOKEN=xoxb-your-bot-token

# For Socket Mode (development)
# SLACK_APP_TOKEN=xapp-your-app-token

# OAuth redirect (set in Slack App settings)
SLACK_REDIRECT_URI=http://localhost:8000/api/v1/integrations/slack/callback

# Encryption key for sensitive data (tokens)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-32-byte-fernet-key

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# LLM Providers
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
